<UserControl x:Class="TextForge.Views.HashView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A2E" Foreground="#E0E0E0">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="24,20,24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Hash Generator" FontSize="20" FontWeight="Bold" Foreground="#CE93D8"/>
            <TextBlock Text="MD5 · SHA-1 · SHA-256 · SHA-512 · HMAC-SHA256" FontSize="12"
                       Foreground="#666688" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- HMAC 키 입력 -->
        <Border Grid.Row="1" Style="{StaticResource PanelBorder}" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="HMAC 키 (선택):" FontSize="12" Foreground="#888888"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBox Grid.Column="1" x:Name="HmacKeyBox" Style="{StaticResource InputBox}"
                         TextChanged="HmacKey_TextChanged"/>
            </Grid>
        </Border>

        <!-- 버튼 행 -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="⎘ Copy All" Style="{StaticResource SmallGrayBtn}"
                    Click="CopyAll_Click" Margin="0,0,6,0"/>
            <Button Content="✕ Clear" Style="{StaticResource SmallGrayBtn}"
                    Click="Clear_Click"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center"
                       FontSize="11" Margin="16,0,0,0"/>
        </WrapPanel>

        <!-- 입력 + 해시 결과 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 입력 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="INPUT" FontSize="10" FontWeight="Bold"
                           Foreground="#444466" Margin="0,0,0,6"/>
                <TextBox Grid.Row="1" x:Name="InputBox" Style="{StaticResource CodeBox}"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         TextChanged="Input_TextChanged"/>
            </Grid>

            <!-- 해시 결과 목록 -->
            <StackPanel Grid.Column="2" x:Name="ResultStack">
                <TextBlock Text="HASH RESULTS" FontSize="10" FontWeight="Bold"
                           Foreground="#444466" Margin="0,0,0,6"/>

                <!-- MD5 -->
                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="MD5" FontSize="11" FontWeight="Bold"
                                   Foreground="#CE93D8" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="Md5Box" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                 Padding="6,4" Background="Transparent" BorderThickness="0"/>
                        <Button Grid.Column="2" Content="⎘" Style="{StaticResource SmallGrayBtn}"
                                Padding="8,4" Click="CopyMd5_Click"/>
                    </Grid>
                </Border>

                <!-- SHA-1 -->
                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SHA-1" FontSize="11" FontWeight="Bold"
                                   Foreground="#CE93D8" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="Sha1Box" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                 Padding="6,4" Background="Transparent" BorderThickness="0"/>
                        <Button Grid.Column="2" Content="⎘" Style="{StaticResource SmallGrayBtn}"
                                Padding="8,4" Click="CopySha1_Click"/>
                    </Grid>
                </Border>

                <!-- SHA-256 -->
                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SHA-256" FontSize="11" FontWeight="Bold"
                                   Foreground="#CE93D8" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="Sha256Box" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                 Padding="6,4" Background="Transparent" BorderThickness="0"/>
                        <Button Grid.Column="2" Content="⎘" Style="{StaticResource SmallGrayBtn}"
                                Padding="8,4" Click="CopySha256_Click"/>
                    </Grid>
                </Border>

                <!-- SHA-512 -->
                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SHA-512" FontSize="11" FontWeight="Bold"
                                   Foreground="#CE93D8" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="Sha512Box" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                 Padding="6,4" Background="Transparent" BorderThickness="0"/>
                        <Button Grid.Column="2" Content="⎘" Style="{StaticResource SmallGrayBtn}"
                                Padding="8,4" Click="CopySha512_Click"/>
                    </Grid>
                </Border>

                <!-- HMAC-SHA256 -->
                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,0"
                        x:Name="HmacBorder" Opacity="0.4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="HMAC-256" FontSize="11" FontWeight="Bold"
                                   Foreground="#FFB74D" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="HmacBox" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                 Padding="6,4" Background="Transparent" BorderThickness="0"/>
                        <Button Grid.Column="2" Content="⎘" Style="{StaticResource SmallGrayBtn}"
                                Padding="8,4" Click="CopyHmac_Click"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
