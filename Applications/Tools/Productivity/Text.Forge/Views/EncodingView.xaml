<UserControl x:Class="TextForge.Views.EncodingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A2E" Foreground="#E0E0E0">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="24,20,24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Encoding" FontSize="20" FontWeight="Bold" Foreground="#4FC3F7"/>
            <TextBlock Text="Base64 · URL · Hex · HTML 인코딩 / 디코딩" FontSize="12"
                       Foreground="#666688" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 방식 선택 -->
        <Border Grid.Row="1" Style="{StaticResource PanelBorder}" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="방식 :" FontSize="12" Foreground="#888888"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                <RadioButton x:Name="Base64Radio" Content="Base64"   Style="{StaticResource OptionRadio}" IsChecked="True"/>
                <RadioButton x:Name="UrlRadio"    Content="URL"      Style="{StaticResource OptionRadio}"/>
                <RadioButton x:Name="HexRadio"    Content="Hex"      Style="{StaticResource OptionRadio}"/>
                <RadioButton x:Name="HtmlRadio"   Content="HTML Entity" Style="{StaticResource OptionRadio}"/>
            </StackPanel>
        </Border>

        <!-- 버튼 행 -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="▲ Encode" Style="{StaticResource AccentBtn}"
                    Click="Encode_Click" Margin="0,0,6,0"/>
            <Button Content="▼ Decode" Style="{StaticResource GrayBtn}"
                    Click="Decode_Click" Margin="0,0,12,0"/>
            <Button Content="⇄ Swap" Style="{StaticResource SmallGrayBtn}"
                    Click="Swap_Click" Margin="0,0,6,0"/>
            <Button Content="⎘ Copy" Style="{StaticResource SmallGrayBtn}"
                    Click="Copy_Click" Margin="0,0,6,0"/>
            <Button Content="✕ Clear" Style="{StaticResource SmallGrayBtn}"
                    Click="Clear_Click"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center"
                       FontSize="11" Margin="16,0,0,0"/>
        </WrapPanel>

        <!-- 입출력 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="INPUT" FontSize="10" FontWeight="Bold"
                           Foreground="#444466" Margin="0,0,0,6"/>
                <TextBox Grid.Row="1" x:Name="InputBox" Style="{StaticResource CodeBox}"
                         AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="OUTPUT" FontSize="10" FontWeight="Bold"
                           Foreground="#444466" Margin="0,0,0,6"/>
                <TextBox Grid.Row="1" x:Name="OutputBox" Style="{StaticResource CodeBox}"
                         IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
