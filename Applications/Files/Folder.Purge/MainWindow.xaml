<Window x:Class="FolderPurge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder.Purge" Height="680" Width="980"
        MinHeight="500" MinWidth="740"
        Background="#1A1A1A" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Window.Resources>
        <!-- Brushes -->
        <SolidColorBrush x:Key="BgBrush"          Color="#1A1A1A"/>
        <SolidColorBrush x:Key="PanelBrush"        Color="#242424"/>
        <SolidColorBrush x:Key="BorderBrush"       Color="#333333"/>
        <SolidColorBrush x:Key="AccentBrush"       Color="#E8643C"/>
        <SolidColorBrush x:Key="AccentHoverBrush"  Color="#FF7A50"/>
        <SolidColorBrush x:Key="GreenBrush"        Color="#4CAF50"/>
        <SolidColorBrush x:Key="TextPrimary"       Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary"     Color="#888888"/>
        <SolidColorBrush x:Key="DangerBrush"       Color="#C0392B"/>
        <SolidColorBrush x:Key="DangerHoverBrush"  Color="#E74C3C"/>
        <SolidColorBrush x:Key="EmptyBadgeBrush"   Color="#2D5A8E"/>
        <SolidColorBrush x:Key="VsBadgeBrush"      Color="#5A3D8A"/>
        <SolidColorBrush x:Key="FileBadgeBrush"    Color="#5A6B2D"/>

        <!-- 버튼 스타일 -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background"      Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="12,6"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox (Window 로컬) -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBorder" Width="16" Height="16" CornerRadius="3"
                                    Background="#2A2A2A" BorderBrush="#555555" BorderThickness="1"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="CheckMark" Text="&#10003;" FontSize="11" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBorder" Property="Background" Value="#2A1A0A"/>
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridViewColumnHeader 다크 스타일 -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background"      Value="#222222"/>
            <Setter Property="Foreground"      Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderBrush"     Value="#333333"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding"         Value="8,5"/>
            <Setter Property="FontSize"        Value="11"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Grid>
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <!-- 컬럼 폭 조절 Gripper — PART_HeaderGripper 이름 필수 -->
                            <Thumb x:Name="PART_HeaderGripper"
                                   HorizontalAlignment="Right" Width="6"
                                   Cursor="SizeWE" Opacity="0">
                                <Thumb.Template>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border x:Name="GripBd" Background="Transparent" Width="6">
                                            <!-- 마우스오버 시 표시되는 구분선 -->
                                            <Rectangle x:Name="GripLine"
                                                       Width="1" HorizontalAlignment="Center"
                                                       Fill="#555566" Opacity="0"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="GripLine" Property="Opacity" Value="1"/>
                                                <Setter TargetName="GripBd" Property="Background" Value="#33334A"/>
                                            </Trigger>
                                            <Trigger Property="IsDragging" Value="True">
                                                <Setter TargetName="GripLine" Property="Fill" Value="{StaticResource AccentBrush}"/>
                                                <Setter TargetName="GripLine" Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter TargetName="PART_HeaderGripper" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 결과 항목 — GridView와 함께 쓸 때 GridViewRowPresenter 필수 -->
        <Style TargetType="ListViewItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding"    Value="4,3"/>
            <Setter Property="FontSize"   Value="11"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd" Background="Transparent"
                                BorderThickness="0,0,0,1" BorderBrush="#2A2A2A"
                                Padding="{TemplateBinding Padding}">
                            <GridViewRowPresenter
                                Columns="{Binding Path=View.Columns,
                                    RelativeSource={RelativeSource AncestorType=ListView}}"
                                Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A40"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#252530"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══ 왼쪽 패널 ═══ -->
        <Border Grid.Column="0" Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 헤더 -->
                <StackPanel Grid.Row="0" Margin="0,0,0,14">
                    <TextBlock Text="Folder.Purge" FontSize="17" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="빈 폴더 탐지 및 정리" FontSize="11"
                               Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- 폴더 추가/제거 -->
                <Grid Grid.Row="1" Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="+ 폴더 추가"
                            Style="{StaticResource GhostButton}"
                            Click="AddFolder_Click"/>
                    <Button Grid.Column="2" Content="제거"
                            Style="{StaticResource GhostButton}"
                            Click="RemoveFolder_Click" x:Name="RemoveFolderBtn"/>
                </Grid>

                <!-- 드래그앤드롭 영역 + 폴더 목록 -->
                <Border Grid.Row="2" x:Name="DropZone"
                        BorderBrush="#444455" BorderThickness="1" CornerRadius="6"
                        Background="#1E1E28" Margin="0,0,0,10">
                    <Grid>
                        <!-- 힌트 (비어있을 때) -->
                        <TextBlock x:Name="DropHint"
                                   Text="폴더를 여기에&#x0a;드래그 앤 드롭"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextAlignment="Center" FontSize="12"
                                   Foreground="#555566" Visibility="Visible"/>

                        <ListBox x:Name="FolderListBox"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{StaticResource TextPrimary}" FontSize="11"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 SelectionChanged="FolderList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2A2A40"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#252535"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"
                                               ToolTip="{Binding}" FontSize="10"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- 스캔 옵션 -->
                <StackPanel Grid.Row="3" Margin="0,0,0,10">
                    <TextBlock Text="스캔 대상" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6"/>
                    <CheckBox x:Name="ChkEmpty"     Content="빈 폴더" IsChecked="True" Margin="0,3"/>
                    <CheckBox x:Name="ChkVsArtifact" Content="VS 빌드 아티팩트 (bin/obj만)" IsChecked="True" Margin="0,3"/>
                    <CheckBox x:Name="ChkEmptyFile"  Content="0바이트 빈 파일" Margin="0,3"/>

                    <TextBlock Text="삭제 방법" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}" Margin="0,10,0,6"/>
                    <CheckBox x:Name="ChkRecycleBin"  Content="휴지통으로 이동" IsChecked="True" Margin="0,3"
                              Checked="RecycleBin_Checked" Unchecked="RecycleBin_Unchecked"/>
                    <CheckBox x:Name="ChkPreview"  Content="미리보기 (삭제 안 함)" Margin="0,3"/>
                </StackPanel>

                <!-- 통계 -->
                <Border Grid.Row="4" Background="#1E1E28" CornerRadius="6" Padding="8,6" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid Margin="0,1">
                            <TextBlock Text="탐지된 항목" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="StatFound" Text="0" FontSize="10"
                                       Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Right"/>
                        </Grid>
                        <Grid Margin="0,1">
                            <TextBlock Text="선택된 항목" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="StatSelected" Text="0" FontSize="10"
                                       Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Right"/>
                        </Grid>
                        <Grid Margin="0,1">
                            <TextBlock Text="확보 예상 용량" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="StatSize" Text="0 B" FontSize="10"
                                       Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 스캔 버튼 -->
                <Button Grid.Row="5" x:Name="ScanBtn" Content="스캔 시작"
                        Style="{StaticResource ActionButton}" FontSize="13" FontWeight="SemiBold"
                        Padding="12,10" Click="Scan_Click"/>
            </Grid>
        </Border>

        <!-- ═══ 오른쪽 패널 ═══ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 툴바 -->
            <Border Grid.Row="0" Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText"
                                   Text="폴더를 추가하거나 드래그 앤 드롭 후 스캔을 시작하세요."
                                   FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock x:Name="ProgressText" FontSize="11"
                                   Foreground="{StaticResource AccentBrush}" Visibility="Collapsed"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="SelectAllBtn" Content="전체 선택"
                                Style="{StaticResource GhostButton}" Margin="0,0,6,0"
                                Click="SelectAll_Click" IsEnabled="False"/>
                        <Button x:Name="SelectNoneBtn" Content="선택 해제"
                                Style="{StaticResource GhostButton}" Margin="0,0,6,0"
                                Click="SelectNone_Click" IsEnabled="False"/>
                        <Button x:Name="CopyResultBtn" Content="결과 복사"
                                Style="{StaticResource GhostButton}" Margin="0,0,6,0"
                                Click="CopyResult_Click" IsEnabled="False"/>
                        <Button x:Name="DeleteBtn" Content="삭제"
                                Style="{StaticResource DangerButton}"
                                Click="Delete_Click" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 결과 목록 -->
            <Grid Grid.Row="1">
                <!-- 빈 상태 힌트 -->
                <StackPanel x:Name="EmptyState" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="&#128465;" FontSize="48" HorizontalAlignment="Center"
                               Foreground="#333344"/>
                    <TextBlock Text="탐지된 폴더가 없습니다."
                               FontSize="14" Foreground="#444455"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="폴더를 추가하고 스캔을 시작하세요."
                               FontSize="12" Foreground="#333344"
                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- 결과 ListView -->
                <ListView x:Name="ResultListView"
                          Background="{StaticResource BgBrush}"
                          BorderThickness="0"
                          Foreground="{StaticResource TextPrimary}"
                          FontSize="11"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Visibility="Collapsed"
                          SelectionMode="Extended">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="24">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  VerticalAlignment="Center"
                                                  Checked="Item_CheckChanged"
                                                  Unchecked="Item_CheckChanged"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80" Header="종류">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="5,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Kind}" Value="Empty">
                                                            <Setter Property="Background" Value="{StaticResource EmptyBadgeBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Kind}" Value="VsArtifact">
                                                            <Setter Property="Background" Value="{StaticResource VsBadgeBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Kind}" Value="EmptyFile">
                                                            <Setter Property="Background" Value="{StaticResource FileBadgeBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding KindBadge}" FontSize="10"
                                                       FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="경로" Width="480">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Path}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="크기" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SizeText}"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="항목 수" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ItemCountText}"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <!-- 삭제 결과 패널 (삭제 후 표시) -->
            <Border Grid.Row="2" x:Name="DeleteResultPanel"
                    Background="#1A2A1A"
                    BorderBrush="#2A4A2A" BorderThickness="0,1,0,0"
                    Padding="12,8" Visibility="Collapsed" MaxHeight="120">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="완료" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource GreenBrush}" VerticalAlignment="Top" Margin="0,0,10,0"/>
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" MaxHeight="100">
                        <TextBlock x:Name="DeleteResultText" FontSize="11"
                                   Foreground="#A0D0A0" TextWrapping="Wrap"/>
                    </ScrollViewer>
                    <Button Grid.Column="2" Content="닫기"
                            Style="{StaticResource GhostButton}"
                            Padding="8,4" Margin="10,0,0,0"
                            Click="CloseResult_Click" VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- 하단 진행 바 -->
            <Border Grid.Row="3" Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                    Padding="12,6" x:Name="ProgressBarPanel" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar x:Name="ScanProgress" Grid.Column="0" Height="4"
                                 IsIndeterminate="True"
                                 Background="#333333" Foreground="{StaticResource AccentBrush}"
                                 BorderThickness="0" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="취소" Style="{StaticResource GhostButton}"
                            Margin="10,0,0,0" Padding="10,4" Click="Cancel_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
