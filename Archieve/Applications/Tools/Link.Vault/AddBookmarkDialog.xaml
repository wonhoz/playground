        <!-- ì„¤ëª… -->
        <TextBlock Grid.Row="4" Text="ì„¤ëª…" Style="{StaticResource Lbl}"/>
        <TextBox x:Name="TxtDesc" Grid.Row="5" Style="{StaticResource DarkTB}"
                 AcceptsReturn="True" TextWrapping="Wrap"
