<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 브러시 -->
    <SolidColorBrush x:Key="BgMain"      Color="#1A1A2E"/>
    <SolidColorBrush x:Key="BgPanel"     Color="#20203A"/>
    <SolidColorBrush x:Key="BorderColor" Color="#2E2E50"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FFA000"/>
    <SolidColorBrush x:Key="TextPri"     Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextSec"     Color="#888888"/>

    <!-- 코드 TextBox -->
    <Style x:Key="CodeBox" TargetType="TextBox">
        <Setter Property="Background"       Value="#16162A"/>
        <Setter Property="Foreground"       Value="#E0E0E0"/>
        <Setter Property="BorderBrush"      Value="#2E2E50"/>
        <Setter Property="BorderThickness"  Value="1"/>
        <Setter Property="FontFamily"       Value="Consolas, Courier New"/>
        <Setter Property="FontSize"         Value="13"/>
        <Setter Property="Padding"          Value="10"/>
        <Setter Property="VerticalScrollBarVisibility"   Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="CaretBrush"       Value="#FFA000"/>
        <Setter Property="SelectionBrush"   Value="#3A3A70"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"
                                      Padding="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#5A5A90"/>
                        </Trigger>
                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#12122A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 단순 입력 TextBox (한 줄) -->
    <Style x:Key="InputBox" TargetType="TextBox">
        <Setter Property="Background"      Value="#16162A"/>
        <Setter Property="Foreground"      Value="#E0E0E0"/>
        <Setter Property="BorderBrush"     Value="#2E2E50"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily"      Value="Consolas"/>
        <Setter Property="FontSize"        Value="13"/>
        <Setter Property="Padding"         Value="10,6"/>
        <Setter Property="Height"          Value="34"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CaretBrush"      Value="#FFA000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Padding="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#5A5A90"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Accent 버튼 (오렌지) -->
    <Style x:Key="AccentBtn" TargetType="Button">
        <Setter Property="Background"      Value="#FFA000"/>
        <Setter Property="Foreground"      Value="#111122"/>
        <Setter Property="FontSize"        Value="12"/>
        <Setter Property="FontWeight"      Value="SemiBold"/>
        <Setter Property="Padding"         Value="14,7"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#FFB730"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#E08C00"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Gray 버튼 -->
    <Style x:Key="GrayBtn" TargetType="Button">
        <Setter Property="Background"      Value="#2A2A48"/>
        <Setter Property="Foreground"      Value="#CCCCCC"/>
        <Setter Property="FontSize"        Value="12"/>
        <Setter Property="Padding"         Value="14,7"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#353560"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#222240"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Small Gray 버튼 -->
    <Style x:Key="SmallGrayBtn" TargetType="Button" BasedOn="{StaticResource GrayBtn}">
        <Setter Property="FontSize"  Value="11"/>
        <Setter Property="Padding"   Value="10,5"/>
        <Setter Property="Foreground" Value="#888888"/>
    </Style>

    <!-- RadioButton 스타일 (옵션 선택용) -->
    <Style x:Key="OptionRadio" TargetType="RadioButton">
        <Setter Property="Foreground"      Value="#AAAAAA"/>
        <Setter Property="FontSize"        Value="12"/>
        <Setter Property="Margin"          Value="0,0,16,0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- CheckBox 스타일 -->
    <Style x:Key="OptionCheck" TargetType="CheckBox">
        <Setter Property="Foreground"  Value="#AAAAAA"/>
        <Setter Property="FontSize"    Value="12"/>
        <Setter Property="Margin"      Value="0,0,16,0"/>
        <Setter Property="Cursor"      Value="Hand"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 패널 보더 -->
    <Style x:Key="PanelBorder" TargetType="Border">
        <Setter Property="Background"       Value="#20203A"/>
        <Setter Property="BorderBrush"      Value="#2E2E50"/>
        <Setter Property="BorderThickness"  Value="1"/>
        <Setter Property="CornerRadius"     Value="6"/>
        <Setter Property="Padding"          Value="12,10"/>
    </Style>

</ResourceDictionary>
