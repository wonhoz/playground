                    <DropShadowEffect Color="#FF44AA" BlurRadius="10" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock FontSize="12" Foreground="#666666" HorizontalAlignment="Center"
                       Margin="0,12,0,0" FontFamily="Consolas" TextAlignment="Center">
                <Run Text="D  F  J  K  â† ë…¸íŠ¸ í‚¤"/>
                <LineBreak/>
                <Run Text="íƒ€ì´ë°ì— ë§žì¶° ëˆŒëŸ¬ë¼!"/>
            </TextBlock>
        </StackPanel>

        <!-- ê²°ê³¼ -->
        <Border x:Name="ResultOverlay" Background="#DD0A0A1E" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="RankText" Text="S" FontSize="72" FontWeight="Bold"
                           Foreground="#FFD700" HorizontalAlignment="Center" FontFamily="Consolas">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD700" BlurRadius="30" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="FinalScoreText" Text="" FontSize="24" FontWeight="Bold"
                           Foreground="#00FFCC" HorizontalAlignment="Center" Margin="0,8,0,0" FontFamily="Consolas"/>
                <TextBlock x:Name="FinalAccText" Text="" FontSize="16"
                           Foreground="#888888" HorizontalAlignment="Center" Margin="0,4,0,0" FontFamily="Consolas"/>
                <TextBlock x:Name="FinalDetailText" Text="" FontSize="13"
                           Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,12,0,0"
                           FontFamily="Consolas" TextAlignment="Center"/>
                <TextBlock Text="[ ENTER í‚¤ë¡œ ëŒì•„ê°€ê¸° ]" FontSize="14" Foreground="#888888"
                           HorizontalAlignment="Center" Margin="0,24,0,0" FontFamily="Consolas"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
