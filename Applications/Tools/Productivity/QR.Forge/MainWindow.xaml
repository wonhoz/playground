<Window x:Class="QrForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="QR.Forge"
        Width="860" Height="600"
        MinWidth="860" MinHeight="600"
        Background="#0F0F18"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI"
        FontSize="13">

    <Window.Resources>
        <!-- 입력 레이블 스타일 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888898"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- 섹션 헤더 -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7C5FE8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- 보조 버튼 -->
        <Style x:Key="SecondaryBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#1E1E30"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ════════ 좌측 입력 패널 ════════ -->
        <Border Grid.Column="0" Background="#14141F"
                BorderBrush="#2A2A40" BorderThickness="0,0,1,0">
            <Grid Margin="16,16,16,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 탭 -->
                <TabControl x:Name="TabInput" Grid.Row="0"
                            SelectionChanged="TabInput_SelectionChanged"
                            Margin="0,0,0,12">
                    <TabItem Header="URL" Tag="Url"/>
                    <TabItem Header="텍스트" Tag="Text"/>
                    <TabItem Header="연락처" Tag="VCard"/>
                    <TabItem Header="WiFi"  Tag="WiFi"/>
                </TabControl>

                <!-- ── URL 폼 ── -->
                <StackPanel x:Name="PnlUrl" Grid.Row="1">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="URL"/>
                    <TextBox x:Name="TxtUrl" TextChanged="Input_Changed"
                             Text="https://" Height="34"/>
                </StackPanel>

                <!-- ── 텍스트 폼 ── -->
                <StackPanel x:Name="PnlText" Grid.Row="1" Visibility="Collapsed">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="텍스트"/>
                    <TextBox x:Name="TxtText" TextChanged="Input_Changed"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" Height="200"/>
                </StackPanel>

                <!-- ── 연락처 폼 ── -->
                <ScrollViewer x:Name="PnlVCard" Grid.Row="1" Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Style="{StaticResource LabelStyle}" Text="이름"/>
                        <TextBox x:Name="TxtVName"    TextChanged="Input_Changed" Height="32" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource LabelStyle}" Text="전화번호"/>
                        <TextBox x:Name="TxtVPhone"   TextChanged="Input_Changed" Height="32" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource LabelStyle}" Text="이메일"/>
                        <TextBox x:Name="TxtVEmail"   TextChanged="Input_Changed" Height="32" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource LabelStyle}" Text="회사"/>
                        <TextBox x:Name="TxtVCompany" TextChanged="Input_Changed" Height="32" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource LabelStyle}" Text="웹사이트"/>
                        <TextBox x:Name="TxtVUrl"     TextChanged="Input_Changed" Height="32"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- ── WiFi 폼 ── -->
                <StackPanel x:Name="PnlWifi" Grid.Row="1" Visibility="Collapsed">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="SSID (네트워크 이름)"/>
                    <TextBox x:Name="TxtWifiSsid" TextChanged="Input_Changed" Height="32" Margin="0,0,0,8"/>
                    <TextBlock Style="{StaticResource LabelStyle}" Text="비밀번호"/>
                    <TextBox x:Name="TxtWifiPass" TextChanged="Input_Changed" Height="32" Margin="0,0,0,8"/>
                    <TextBlock Style="{StaticResource LabelStyle}" Text="암호화 방식"/>
                    <ComboBox x:Name="CmbWifiEnc" SelectionChanged="Input_Changed_Combo" Height="32">
                        <ComboBoxItem Content="WPA/WPA2" IsSelected="True"/>
                        <ComboBoxItem Content="WEP"/>
                        <ComboBoxItem Content="없음 (개방형)"/>
                    </ComboBox>
                </StackPanel>

                <!-- QR 생성 버튼 -->
                <Button Grid.Row="2" Content="QR 생성" Height="38"
                        Margin="0,16,0,0" Click="BtnGenerate_Click"
                        FontSize="13" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- ════════ 우측 미리보기 + 스타일 + 내보내기 ════════ -->
        <Grid Grid.Column="1" Margin="16,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- QR 미리보기 -->
            <Border Grid.Row="0" HorizontalAlignment="Center"
                    Background="#1A1A2E" BorderBrush="#2A2A40" BorderThickness="1"
                    CornerRadius="6" Padding="4" Margin="0,0,0,16">
                <skia:SKElement x:Name="SkiaView"
                                Width="250" Height="250"
                                PaintSurface="SkiaView_PaintSurface"/>
            </Border>

            <!-- 스타일 섹션 -->
            <TextBlock Grid.Row="1" Style="{StaticResource SectionHeader}" Text="━  스타일"/>
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 전경색 / 배경색 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,8">
                    <TextBlock Text="전경색" VerticalAlignment="Center" Foreground="#888898" FontSize="11" Margin="0,0,8,0"/>
                    <Border x:Name="FgColorBox" Width="32" Height="26"
                            Background="Black" CornerRadius="4"
                            BorderBrush="#2A2A40" BorderThickness="1"
                            Cursor="Hand" MouseLeftButtonDown="FgColor_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="배경색" VerticalAlignment="Center" Foreground="#888898" FontSize="11" Margin="0,0,8,0"/>
                    <Border x:Name="BgColorBox" Width="32" Height="26"
                            Background="White" CornerRadius="4"
                            BorderBrush="#2A2A40" BorderThickness="1"
                            Cursor="Hand" MouseLeftButtonDown="BgColor_Click"/>
                </StackPanel>

                <!-- 마커 스타일 / 에러 보정 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="마커 스타일"/>
                    <ComboBox x:Name="CmbMarker" SelectionChanged="Style_Changed" Height="30">
                        <ComboBoxItem Content="■ 사각형" IsSelected="True"/>
                        <ComboBoxItem Content="▣ 라운드"/>
                        <ComboBoxItem Content="● 도트"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="에러 보정"/>
                    <ComboBox x:Name="CmbEcLevel" SelectionChanged="Style_Changed" Height="30">
                        <ComboBoxItem Content="L (7%)"/>
                        <ComboBoxItem Content="M (15%)"/>
                        <ComboBoxItem Content="Q (25%)"/>
                        <ComboBoxItem Content="H (30%)" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- 로고 -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <TextBlock Text="로고" VerticalAlignment="Center" Foreground="#888898" FontSize="11" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtLogoPath" Text="(없음)" Foreground="#555570"
                               VerticalAlignment="Center" Margin="0,0,8,0" MaxWidth="180"
                               TextTrimming="CharacterEllipsis"/>
                    <Button Content="선택…" Width="60" Height="26" Click="BtnLogo_Click"/>
                    <Button Content="제거"  Width="50" Height="26" Margin="6,0,0,0"
                            Style="{StaticResource SecondaryBtn}" Click="BtnLogoRemove_Click"/>
                </StackPanel>
            </Grid>

            <!-- 내보내기 섹션 -->
            <TextBlock Grid.Row="3" Style="{StaticResource SectionHeader}" Text="━  내보내기"/>
            <WrapPanel Grid.Row="4" VerticalAlignment="Top">
                <Button Content="PNG 저장"      Margin="0,0,8,8" Width="100" Click="BtnPng_Click"/>
                <Button Content="SVG 저장"      Margin="0,0,8,8" Width="100" Click="BtnSvg_Click"/>
                <Button Content="PDF 저장"      Margin="0,0,8,8" Width="100" Click="BtnPdf_Click"/>
                <Button Content="클립보드 복사"  Margin="0,0,8,8" Width="120" Click="BtnClipboard_Click"/>
                <Button Content="배치 생성 (CSV)…" Margin="0,0,8,8" Width="140"
                        Style="{StaticResource SecondaryBtn}" Click="BtnBatch_Click"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
