<Window x:Class="WorkspaceSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workspace.Switcher" Height="560" Width="760"
        MinHeight="400" MinWidth="500"
        Background="#1A1A2E" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- 상단 버튼 스타일 -->
        <Style x:Key="TopBtn" TargetType="Button">
            <Setter Property="Background"       Value="#333355"/>
            <Setter Property="Foreground"       Value="#E0E0E0"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="14,6"/>
            <Setter Property="FontSize"         Value="12"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource TopBtn}">
            <Setter Property="Background" Value="#5C5CFF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7070FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ═══ 상단 툴바 ═══ -->
        <Border Grid.Row="0" Background="#16162A"
                BorderBrush="#333355" BorderThickness="0,0,0,1" Padding="14,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Workspace.Switcher" FontSize="16" FontWeight="Bold"
                           Foreground="#7070FF" VerticalAlignment="Center" Margin="0,0,20,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="+ 새 워크스페이스" Style="{StaticResource AccentBtn}"
                            Margin="0,0,8,0" Click="AddWorkspace_Click"/>
                    <Button Content="현재 앱으로 만들기" Style="{StaticResource TopBtn}"
                            ToolTip="실행 중인 앱들로 새 워크스페이스 생성"
                            Click="CaptureApps_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══ 워크스페이스 카드 그리드 ═══ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled" Background="#1A1A2E">
            <WrapPanel x:Name="WorkspaceBoard" Margin="14"/>
        </ScrollViewer>
    </Grid>
</Window>
