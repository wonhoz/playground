<Application x:Class="NeonSlice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>

    <!-- ── 네온 사이버펑크 색상 ──────────────────────────────────── -->
    <SolidColorBrush x:Key="BgBase"       Color="#0A0A0F"/>
    <SolidColorBrush x:Key="BgPanel"      Color="#0D0D1A"/>
    <SolidColorBrush x:Key="BgCard"       Color="#111122"/>
    <SolidColorBrush x:Key="BgHover"      Color="#1A1A2E"/>
    <SolidColorBrush x:Key="NeonCyan"     Color="#00FFFF"/>
    <SolidColorBrush x:Key="NeonPink"     Color="#FF2D78"/>
    <SolidColorBrush x:Key="NeonGreen"    Color="#39FF14"/>
    <SolidColorBrush x:Key="NeonPurple"   Color="#BF5FFF"/>
    <SolidColorBrush x:Key="NeonOrange"   Color="#FF6B00"/>
    <SolidColorBrush x:Key="NeonYellow"   Color="#FFE600"/>
    <SolidColorBrush x:Key="TextMain"     Color="#E8EAF0"/>
    <SolidColorBrush x:Key="TextSub"      Color="#6A7080"/>
    <SolidColorBrush x:Key="Border"       Color="#1E2A3A"/>

    <!-- ── 공통 버튼 스타일 ──────────────────────────────────────── -->
    <Style x:Key="MenuBtn" TargetType="Button">
      <Setter Property="Background" Value="#0D0D1A"/>
      <Setter Property="Foreground" Value="#00FFFF"/>
      <Setter Property="BorderBrush" Value="#00FFFF"/>
      <Setter Property="BorderThickness" Value="1.5"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="Bd"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6" Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Bd" Property="Background" Value="#1A1A2E"/>
                <Setter TargetName="Bd" Property="Effect">
                  <Setter.Value>
                    <DropShadowEffect Color="#00FFFF" ShadowDepth="0" BlurRadius="12" Opacity="0.8"/>
                  </Setter.Value>
                </Setter>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Bd" Property="Background" Value="#001A1A"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="ModeBtn" TargetType="Button" BasedOn="{StaticResource MenuBtn}">
      <Setter Property="Foreground" Value="#E8EAF0"/>
      <Setter Property="BorderBrush" Value="#2A3A5A"/>
      <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="ModeBtnActive" TargetType="Button" BasedOn="{StaticResource MenuBtn}">
      <Setter Property="Background" Value="#001A20"/>
      <Setter Property="Foreground" Value="#00FFFF"/>
      <Setter Property="BorderBrush" Value="#00FFFF"/>
      <Setter Property="FontSize" Value="14"/>
    </Style>

  </Application.Resources>
</Application>
