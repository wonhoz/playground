<Window x:Class="EnvGuard.SnapshotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="스냅샷 관리" Width="750" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#0F1018"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="저장된 스냅샷" FontSize="15" FontWeight="SemiBold"
                   Foreground="#40A0FF" Margin="0,0,0,8"/>

        <ListBox x:Name="LbSnapshots" Grid.Row="1" Background="#14142A" Foreground="#D0D0D8"
                 BorderBrush="#252540" FontSize="12" Padding="4"
                 SelectionChanged="LbSnapshots_SelectionChanged"/>

        <TextBlock Grid.Row="2" Text="변경사항 미리보기 (Diff)" FontSize="13" FontWeight="SemiBold"
                   Foreground="#A0A0C0" Margin="0,10,0,6"/>

        <ListBox x:Name="LbDiff" Grid.Row="3" Background="#14142A" Foreground="#D0D0D8"
                 BorderBrush="#252540" FontSize="11" FontFamily="Cascadia Mono, Consolas" Padding="4"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🔄 복원" Click="Restore_Click" Padding="16,8" FontSize="12"
                    Background="#2855A0" Foreground="#E0E0E0" BorderThickness="0" Cursor="Hand"
                    Margin="0,0,6,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3366B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="🗑 삭제" Click="Delete_Click" Padding="16,8" FontSize="12"
                    Background="#802020" Foreground="#E0E0E0" BorderThickness="0" Cursor="Hand"
                    Margin="0,0,6,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#A03030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="닫기" Click="Close_Click" Padding="16,8" FontSize="12"
                    Background="#252540" Foreground="#E0E0E0" BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#303058"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
