                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border x:Name="EasyBtn" Background="#1A3A1A" BorderBrush="#2ECC71"
                            BorderThickness="2" CornerRadius="6" Padding="16,8" Margin="4,0"
                            Cursor="Hand" MouseDown="Easy_Click">
                        <TextBlock Text="EASY" FontSize="14" FontWeight="Bold" Foreground="#2ECC71"
                                   FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="NormalBtn" Background="#2A2A1A" BorderBrush="#FFD700"
                            BorderThickness="2" CornerRadius="6" Padding="16,8" Margin="4,0"
                            Cursor="Hand" MouseDown="Normal_Click">
                        <TextBlock Text="NORMAL" FontSize="14" FontWeight="Bold" Foreground="#FFD700"
                                   FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="HardBtn" Background="#3A1A1A" BorderBrush="#E74C3C"
                            BorderThickness="2" CornerRadius="6" Padding="16,8" Margin="4,0"
                            Cursor="Hand" MouseDown="Hard_Click">
                        <TextBlock Text="HARD" FontSize="14" FontWeight="Bold" Foreground="#E74C3C"
                                   FontFamily="Consolas"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- BPM ì„ íƒ -->
            <StackPanel Margin="0,16,0,0" HorizontalAlignment="Center">
                <TextBlock Text="BPM" FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" FontFamily="Consolas" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border x:Name="Bpm120Btn" Background="#1A1A2E" BorderBrush="#555555" BorderThickness="1"
                            CornerRadius="6" Padding="12,6" Margin="4,0"
                            Cursor="Hand" MouseDown="Bpm120_Click">
                        <TextBlock Text="120" FontSize="13" Foreground="#AAAAAA" FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="Bpm140Btn" Background="#1A1A2E" BorderBrush="#00FFCC" BorderThickness="3"
                            CornerRadius="6" Padding="12,6" Margin="4,0"
                            Cursor="Hand" MouseDown="Bpm140_Click">
                        <TextBlock Text="140" FontSize="13" Foreground="#00FFCC" FontWeight="Bold" FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="Bpm160Btn" Background="#1A1A2E" BorderBrush="#555555" BorderThickness="1"
                            CornerRadius="6" Padding="12,6" Margin="4,0"
                            Cursor="Hand" MouseDown="Bpm160_Click">
                        <TextBlock Text="160" FontSize="13" Foreground="#AAAAAA" FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="Bpm180Btn" Background="#1A1A2E" BorderBrush="#555555" BorderThickness="1"
                            CornerRadius="6" Padding="12,6" Margin="4,0"
                            Cursor="Hand" MouseDown="Bpm180_Click">
