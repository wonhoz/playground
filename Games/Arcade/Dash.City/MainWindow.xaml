<Window x:Class="DashCity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dash.City" Width="800" Height="600"
        ResizeMode="NoResize"
        Background="#050510" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"
        Focusable="True">
    <Grid>
        <!-- 3D 뷰포트 -->
        <Viewport3D x:Name="GameViewport" ClipToBounds="True">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="Camera"
                    Position="0,4,-8" LookDirection="0,-0.25,1"
                    UpDirection="0,1,0" FieldOfView="70"/>
            </Viewport3D.Camera>
        </Viewport3D>

        <!-- HUD 상단 -->
        <Grid x:Name="HudPanel" Visibility="Collapsed" VerticalAlignment="Top" Margin="16,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="SCORE " FontSize="12" Foreground="#888" FontFamily="Consolas"/>
                    <TextBlock x:Name="ScoreText" Text="0" FontSize="22" FontWeight="Bold"
                               Foreground="#00FFCC" FontFamily="Consolas"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                    <TextBlock Text="DIST " FontSize="11" Foreground="#666" FontFamily="Consolas"/>
                    <TextBlock x:Name="DistText" Text="0m" FontSize="13"
                               Foreground="#888" FontFamily="Consolas"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock x:Name="SpeedText" Text="" FontSize="14" FontWeight="Bold"
                           Foreground="#FF66AA" FontFamily="Consolas" HorizontalAlignment="Center"/>
                <TextBlock x:Name="PowerUpText" Text="" FontSize="12" FontWeight="Bold"
                           Foreground="#FFD700" FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,2,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="◆ " FontSize="16" Foreground="#FFD700" FontFamily="Consolas"/>
                    <TextBlock x:Name="CoinText" Text="0" FontSize="22" FontWeight="Bold"
                               Foreground="#FFD700" FontFamily="Consolas"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,2,0,0">
                    <TextBlock Text="×" FontSize="12" Foreground="#666" FontFamily="Consolas"/>
                    <TextBlock x:Name="MultText" Text="1" FontSize="13" FontWeight="Bold"
                               Foreground="#FF66AA" FontFamily="Consolas"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- 타이틀 -->
        <StackPanel x:Name="TitlePanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="DASH.CITY" FontSize="60" FontWeight="Bold"
                       Foreground="#00FFCC" HorizontalAlignment="Center" FontFamily="Consolas">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#00CCAA" BlurRadius="35" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="3D ENDLESS RUNNER" FontSize="15" Foreground="#FF66AA"
                       HorizontalAlignment="Center" Margin="0,2,0,0" FontFamily="Consolas">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FF44AA" BlurRadius="8" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- 속도 선택 -->
            <StackPanel Margin="0,28,0,0" HorizontalAlignment="Center">
                <TextBlock Text="SPEED" FontSize="11" Foreground="#666666"
                           HorizontalAlignment="Center" FontFamily="Consolas" Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border x:Name="SpeedSlowBtn" Background="#1A1A2E" BorderBrush="#3A86FF" BorderThickness="1"
                            CornerRadius="5" Padding="14,6" Margin="4,0" Cursor="Hand" MouseDown="SpeedSlow_Click">
                        <TextBlock Text="SLOW" FontSize="12" Foreground="#3A86FF" FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="SpeedNormBtn" Background="#1A1A2E" BorderBrush="#00FFCC" BorderThickness="3"
                            CornerRadius="5" Padding="14,6" Margin="4,0" Cursor="Hand" MouseDown="SpeedNorm_Click">
                        <TextBlock Text="NORMAL" FontSize="12" Foreground="#00FFCC" FontWeight="Bold" FontFamily="Consolas"/>
                    </Border>
                    <Border x:Name="SpeedFastBtn" Background="#1A1A2E" BorderBrush="#FF66AA" BorderThickness="1"
                            CornerRadius="5" Padding="14,6" Margin="4,0" Cursor="Hand" MouseDown="SpeedFast_Click">
                        <TextBlock Text="FAST" FontSize="12" Foreground="#FF66AA" FontFamily="Consolas"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="[ ENTER 키로 시작 ]" FontSize="18" Foreground="#FFD700"
                       HorizontalAlignment="Center" Margin="0,24,0,0" FontFamily="Consolas">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock FontSize="12" Foreground="#666666" HorizontalAlignment="Center"
                       Margin="0,16,0,0" FontFamily="Consolas" TextAlignment="Center">
                <Run Text="← →    좌우 레인 이동"/>
                <LineBreak/>
                <Run Text="↑ / SPACE  점프"/>
                <LineBreak/>
                <Run Text="↓         슬라이드"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="장애물을 피하고 코인을 모아라!"/>
            </TextBlock>
        </StackPanel>

        <!-- 게임 오버 -->
        <Border x:Name="GameOverPanel" Background="#DD050510" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER" FontSize="52" FontWeight="Bold"
                           Foreground="#E74C3C" HorizontalAlignment="Center" FontFamily="Consolas">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#E74C3C" BlurRadius="30" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="GOScoreText" Text="" FontSize="24" FontWeight="Bold"
                           Foreground="#00FFCC" HorizontalAlignment="Center" Margin="0,16,0,0" FontFamily="Consolas"/>
                <TextBlock x:Name="GODistText" Text="" FontSize="16"
                           Foreground="#888" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="Consolas"/>
                <TextBlock x:Name="GOCoinText" Text="" FontSize="16"
                           Foreground="#FFD700" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="Consolas"/>
                <TextBlock Text="[ ENTER 키로 다시 시작 ]" FontSize="14" Foreground="#888"
                           HorizontalAlignment="Center" Margin="0,28,0,0" FontFamily="Consolas"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
