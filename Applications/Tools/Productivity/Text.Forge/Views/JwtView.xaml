<UserControl x:Class="TextForge.Views.JwtView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A2E" Foreground="#E0E0E0">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="24,20,24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="JWT Decoder" FontSize="20" FontWeight="Bold" Foreground="#FFB74D"/>
            <TextBlock Text="JWT 토큰을 디코딩합니다 (서명 검증 없음)" FontSize="12"
                       Foreground="#666688" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- JWT 입력 -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="JWT TOKEN" FontSize="10" FontWeight="Bold"
                       Foreground="#444466" Margin="0,0,0,6"/>
            <TextBox Grid.Row="1" x:Name="TokenBox" Style="{StaticResource CodeBox}"
                     Height="80" AcceptsReturn="False" TextWrapping="Wrap"
                     TextChanged="Token_TextChanged"/>
        </Grid>

        <!-- 버튼 행 -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Content="⟳ Decode" Style="{StaticResource AccentBtn}"
                    Click="Decode_Click" Margin="0,0,6,0"/>
            <Button Content="✕ Clear" Style="{StaticResource SmallGrayBtn}"
                    Click="Clear_Click"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center"
                       FontSize="11" Margin="16,0,0,0"/>
        </WrapPanel>

        <!-- 결과 (세 섹션) -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 헤더 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                    <Ellipse Width="8" Height="8" Fill="#FF6B81" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="HEADER" FontSize="10" FontWeight="Bold" Foreground="#FF6B81"/>
                </StackPanel>
                <TextBox Grid.Row="1" x:Name="HeaderBox" Style="{StaticResource CodeBox}"
                         IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>

            <!-- 페이로드 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                    <Ellipse Width="8" Height="8" Fill="#9EC8FF" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="PAYLOAD" FontSize="10" FontWeight="Bold" Foreground="#9EC8FF"/>
                </StackPanel>
                <TextBox Grid.Row="1" x:Name="PayloadBox" Style="{StaticResource CodeBox}"
                         IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>

            <!-- 서명 -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                    <Ellipse Width="8" Height="8" Fill="#81C784" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="SIGNATURE" FontSize="10" FontWeight="Bold" Foreground="#81C784"/>
                </StackPanel>
                <Border Grid.Row="1" Style="{StaticResource PanelBorder}" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock x:Name="ExpLabel" FontSize="11" Foreground="#888888" TextWrapping="Wrap"/>
                        <TextBlock x:Name="IatLabel" FontSize="11" Foreground="#888888" Margin="0,4,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                <TextBox Grid.Row="2" x:Name="SignatureBox" Style="{StaticResource CodeBox}"
                         IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
