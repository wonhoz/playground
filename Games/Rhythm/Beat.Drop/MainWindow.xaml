        <Canvas x:Name="GameCanvas" Background="Transparent" ClipToBounds="True"/>

        <!-- HUD ìƒë‹¨ -->
        <Grid x:Name="HudPanel" VerticalAlignment="Top" Margin="12,6" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ScoreText" Grid.Column="0" Text="0" FontSize="20" FontWeight="Bold"
                       Foreground="#00FFCC" FontFamily="Consolas"/>
            <TextBlock x:Name="ComboText" Grid.Column="1" Text="" FontSize="24" FontWeight="Bold"
                       Foreground="#FF66AA" HorizontalAlignment="Center" FontFamily="Consolas">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FF44AA" BlurRadius="12" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="AccText" Grid.Column="2" Text="100.0%" FontSize="14"
                       Foreground="#888888" HorizontalAlignment="Right" FontFamily="Consolas"/>
        </Grid>

        <!-- íŒì • í‘œì‹œ -->
        <TextBlock x:Name="JudgeText" Text="" FontSize="22" FontWeight="Bold"
