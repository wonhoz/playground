<Window x:Class="HueFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hue Flow" Width="500"
        SizeToContent="Height"
        ResizeMode="NoResize"
        Background="#12121E"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 새 게임 버튼 -->
        <Style x:Key="NewGameBtn" TargetType="Button">
            <Setter Property="Background"       Value="#4FC3F7"/>
            <Setter Property="Foreground"       Value="#0D0D1A"/>
            <Setter Property="FontSize"         Value="12"/>
            <Setter Property="FontWeight"       Value="SemiBold"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="18,7"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#81D4FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 오버레이 다시하기 버튼 -->
        <Style x:Key="ReplayBtn" TargetType="Button">
            <Setter Property="Background"       Value="#4FC3F7"/>
            <Setter Property="Foreground"       Value="#0D0D1A"/>
            <Setter Property="FontSize"         Value="14"/>
            <Setter Property="FontWeight"       Value="Bold"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="32,10"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#81D4FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 색상 선택 버튼 -->
        <Style x:Key="ColorBtn" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="bd" Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderBrush="Transparent" BorderThickness="3"/>
                            <!-- 현재 영역 색 표시: 흰 테두리 + 체크 아이콘 -->
                            <Border x:Name="activeMark"
                                    CornerRadius="8"
                                    BorderBrush="White" BorderThickness="3"
                                    Visibility="Collapsed"/>
                            <TextBlock x:Name="checkMark" Text="✓"
                                       Foreground="White" FontSize="18" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="Collapsed"
                                       Effect="{x:Null}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.80"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="activeMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkMark"  Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 최상위: 메인 + 오버레이 -->
    <Grid>

        <!-- ═══ 메인 레이아웃 ═══ -->
        <Grid Margin="20,16,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 헤더 -->
                <RowDefinition Height="14"/>
                <RowDefinition Height="Auto"/>  <!-- 보드 -->
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>  <!-- 진행도 -->
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>  <!-- 색상 버튼 -->
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>  <!-- 도움말 -->
            </Grid.RowDefinitions>

            <!-- ── 헤더 ── -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Hue Flow" FontSize="30" FontWeight="Bold"
                               Foreground="#4FC3F7"/>
                    <TextBlock Text="모든 칸을 같은 색으로 채우세요 (좌상단에서 확장)"
                               FontSize="11" Foreground="#555577" Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- 이동 카운터 -->
                        <Border Background="#1E1E30" CornerRadius="6" Padding="14,6" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="이동" FontSize="10" Foreground="#555577"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="MovesText" Text="0 / 30" FontSize="16"
                                           FontWeight="Bold" Foreground="#E0E0E0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- 최고 기록 -->
                        <Border Background="#1E1E30" CornerRadius="6" Padding="14,6">
                            <StackPanel>
                                <TextBlock Text="최고" FontSize="10" Foreground="#555577"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BestText" Text="-" FontSize="16"
                                           FontWeight="Bold" Foreground="#FFB74D"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <Button x:Name="NewGameBtn" Content="새 게임" Margin="0,8,0,0"
                            Style="{StaticResource NewGameBtn}" Click="NewGame_Click"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>

            <!-- ── 게임 보드 ── -->
            <Border Grid.Row="2" Background="#1C1C2C" CornerRadius="10" Padding="5"
                    HorizontalAlignment="Center">
                <!-- 10×10 타일 그리드 (각 41px = 410px) -->
                <UniformGrid x:Name="TileGrid" Rows="10" Columns="10"
                             Width="410" Height="410"/>
            </Border>

            <!-- ── 진행도 바 ── -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- 배경 트랙 -->
                <Border x:Name="ProgressTrack" Background="#1E1E30" CornerRadius="4" Height="8"/>
                <!-- 채움 -->
                <Border x:Name="ProgressFill"  Background="#4FC3F7" CornerRadius="4" Height="8"
                        HorizontalAlignment="Left" Width="0"/>
                <!-- 퍼센트 텍스트 -->
                <TextBlock x:Name="ProgressText" Grid.Column="1" Text="1%"
                           FontSize="11" Foreground="#555577"
                           Margin="8,0,0,0" VerticalAlignment="Center"/>
            </Grid>

            <!-- ── 색상 선택 버튼 ── -->
            <UniformGrid Grid.Row="6" x:Name="ColorPanel"
                         Rows="1" Columns="6" Height="54"/>

            <!-- ── 도움말 ── -->
            <TextBlock Grid.Row="8" Text="색을 골라 내 영역을 확장하세요 — 30회 안에 전체를 채우면 승리!"
                       FontSize="10" Foreground="#3A3A55"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- ═══ Win / Lose 오버레이 ═══ -->
        <Grid x:Name="Overlay" Visibility="Collapsed"
              Background="#C0080818">
            <Border Background="#1A1A2E" CornerRadius="16" Padding="48,36"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="#2A2A44" BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="OverlayEmoji" FontSize="52"
                               HorizontalAlignment="Center" Margin="0,0,0,6"
                               FontFamily="Segoe UI Emoji"/>
                    <TextBlock x:Name="OverlayTitle" FontSize="28" FontWeight="Bold"
                               Foreground="#E0E0E0" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="OverlayMsg" FontSize="13" Foreground="#888899"
                               HorizontalAlignment="Center" Margin="0,8,0,0"
                               TextAlignment="Center"/>
                    <Button Content="다시 하기" HorizontalAlignment="Center"
                            Margin="0,24,0,0" Style="{StaticResource ReplayBtn}"
                            Click="NewGame_Click"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
