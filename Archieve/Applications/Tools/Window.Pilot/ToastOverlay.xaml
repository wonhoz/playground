<Window x:Class="WindowPilot.ToastOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False" Topmost="True"
        IsHitTestVisible="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual">

    <Border Background="#CC1A1A2E" CornerRadius="8"
            Padding="16,10" Margin="4">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="12"
                              ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>
        <TextBlock x:Name="TxtMsg" Text=""
                   FontSize="13" Foreground="#E0E0E0"
                   FontFamily="Segoe UI"/>
    </Border>
</Window>
