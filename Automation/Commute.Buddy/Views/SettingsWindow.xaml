<Window x:Class="CommuteBuddy.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commute.Buddy 설정"
        Width="830" Height="660"
        MinWidth="700" MinHeight="520"
        Background="#1A1A2E"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background"       Value="#252535"/>
            <Setter Property="Foreground"       Value="#E0E0E0"/>
            <Setter Property="BorderBrush"      Value="#3A3A55"/>
            <Setter Property="BorderThickness"  Value="1"/>
            <Setter Property="Padding"          Value="6,4"/>
            <Setter Property="CaretBrush"       Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5080CC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#C0C0D0"/>
            <Setter Property="Margin"     Value="0,3,0,0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background"      Value="#2A2A3E"/>
            <Setter Property="Foreground"      Value="#C0C0D0"/>
            <Setter Property="BorderBrush"     Value="#3A3A55"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding"         Value="10,4"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A55"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background"   Value="Transparent"/>
            <Setter Property="Foreground"   Value="#C0C0D0"/>
            <Setter Property="Padding"      Value="10,7"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1E3F80"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#222245"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ── 메인 컨텐츠: 좌측 목록 | 우측 상세 ── -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측: 장소 목록 -->
            <Border Grid.Column="0" Background="#111120"
                    BorderBrush="#2A2A45" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="장소 목록"
                               Foreground="#6677AA" FontSize="11" FontWeight="SemiBold"
                               Margin="10,10,10,5"/>

                    <ListBox Grid.Row="1" x:Name="LocationList"
                             Background="Transparent" BorderThickness="0"
                             SelectionChanged="LocationList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" FontSize="13"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8,6,8,8">
                        <Button Content="+ 추가" Click="AddLocation_Click"
                                Padding="8,3" FontSize="12"/>
                        <Button Content="− 삭제" Click="RemoveLocation_Click"
                                Padding="8,3" FontSize="12" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 우측: 상세 편집 영역 -->
            <Grid Grid.Column="1">

                <!-- 장소 미선택 안내 -->
                <TextBlock x:Name="TxtNoSelection"
                           Text="← 장소를 선택하거나 추가하세요"
                           Foreground="#444465" FontSize="14"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- 장소 상세 폼 -->
                <ScrollViewer x:Name="DetailScroll" Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto" Background="#1A1A2E">
                    <StackPanel Margin="18,14,18,18">

                        <!-- 기본 정보 -->
                        <TextBlock Text="기본 정보" Foreground="#6677AA"
                                   FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="이름"
                                       Foreground="#8888AA" VerticalAlignment="Center"
                                       FontSize="12" Margin="0,0,8,6"/>
                            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="TxtName"
                                       FontSize="12" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="이모지"
                                       Foreground="#8888AA" VerticalAlignment="Center"
                                       FontSize="12" Margin="0,0,8,6"/>
                            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="TxtEmoji"
                                       FontSize="12" Margin="0,0,0,6" Width="60"
                                       HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="WiFi SSID"
                                       Foreground="#8888AA" VerticalAlignment="Top"
                                       FontSize="12" Margin="0,5,8,0"/>
                            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="TxtSsids"
                                       AcceptsReturn="True" TextWrapping="Wrap"
                                       Height="64" VerticalScrollBarVisibility="Auto"
                                       FontSize="12"
                                       ToolTip="연결 시 이 장소로 인식할 WiFi SSID&#x0a;줄마다 하나씩 입력 (대소문자 구분)"/>
                        </Grid>

                        <Separator Background="#2A2A45" Margin="0,12,0,12"/>

                        <!-- 도착 루틴 -->
                        <TextBlock Text="▶  도착 루틴 — 이 장소에 연결됐을 때 실행"
                                   Foreground="#6677AA" FontSize="11" FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <CheckBox x:Name="ChkArrivalStartSA" Content="StayAwake 시작" FontSize="12"/>
                        <CheckBox x:Name="ChkArrivalStopSA"  Content="StayAwake 정지" FontSize="12" Margin="0,5,0,0"/>
                        <TextBlock Text="실행할 앱 (전체 경로, 줄마다 하나):"
                                   Foreground="#7788AA" FontSize="11" Margin="0,10,0,4"/>
                        <TextBox x:Name="TxtArrivalAppsLaunch"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="56" VerticalScrollBarVisibility="Auto" FontSize="12"
                                 ToolTip="예: C:\Program Files\Slack\Slack.exe"/>
                        <TextBlock Text="종료할 앱 (프로세스 이름, 줄마다 하나):"
                                   Foreground="#7788AA" FontSize="11" Margin="0,8,0,4"/>
                        <TextBox x:Name="TxtArrivalAppsClose"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="56" VerticalScrollBarVisibility="Auto" FontSize="12"
                                 ToolTip="예: Spotify (확장자 없이)"/>

                        <Separator Background="#2A2A45" Margin="0,12,0,12"/>

                        <!-- 퇴근 루틴 -->
                        <TextBlock Text="◀  퇴근 루틴 — 이 장소를 벗어날 때 실행"
                                   Foreground="#6677AA" FontSize="11" FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <CheckBox x:Name="ChkDepartureStartSA" Content="StayAwake 시작" FontSize="12"/>
                        <CheckBox x:Name="ChkDepartureStopSA"  Content="StayAwake 정지" FontSize="12" Margin="0,5,0,0"/>
                        <TextBlock Text="실행할 앱 (전체 경로, 줄마다 하나):"
                                   Foreground="#7788AA" FontSize="11" Margin="0,10,0,4"/>
                        <TextBox x:Name="TxtDepartureAppsLaunch"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="56" VerticalScrollBarVisibility="Auto" FontSize="12"/>
                        <TextBlock Text="종료할 앱 (프로세스 이름, 줄마다 하나):"
                                   Foreground="#7788AA" FontSize="11" Margin="0,8,0,4"/>
                        <TextBox x:Name="TxtDepartureAppsClose"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="56" VerticalScrollBarVisibility="Auto" FontSize="12"/>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- ── 일반 설정 바 ── -->
        <Border Grid.Row="1" Background="#111120"
                BorderBrush="#2A2A45" BorderThickness="0,1,0,0" Padding="14,10">
            <StackPanel>
                <!-- StayAwake 경로 -->
                <DockPanel Margin="0,0,0,8">
                    <TextBlock Text="StayAwake 경로:" Foreground="#8888AA" FontSize="12"
                               VerticalAlignment="Center" DockPanel.Dock="Left" Width="110"/>
                    <Button Content="찾기" Click="BtnBrowse_Click"
                            DockPanel.Dock="Right" Padding="10,3" FontSize="12" Margin="6,0,0,0"/>
                    <TextBox x:Name="TxtStayAwakePath" FontSize="12"
                             ToolTip="StayAwake.exe 파일 전체 경로"/>
                </DockPanel>

                <!-- 재택 모드 -->
                <DockPanel>
                    <TextBlock Text="재택 모드:" Foreground="#8888AA" FontSize="12"
                               VerticalAlignment="Center" DockPanel.Dock="Left" Width="110"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="ChkRemoteWork" Content="활성화"
                                  Foreground="#C0C0D0" VerticalAlignment="Center"
                                  Checked="ChkRemoteWork_Changed" Unchecked="ChkRemoteWork_Changed"/>
                        <TextBlock Text="   매일 " Foreground="#8888AA"
                                   FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtRemoteHour" Width="36" FontSize="12"
                                 TextAlignment="Center" MaxLength="2" ToolTip="시 (0~23)"/>
                        <TextBlock Text=" : " Foreground="#8888AA"
                                   FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtRemoteMinute" Width="36" FontSize="12"
                                 TextAlignment="Center" MaxLength="2" ToolTip="분 (0~59)"/>
                        <TextBlock Text="  에  " Foreground="#8888AA"
                                   FontSize="12" VerticalAlignment="Center"/>
                        <ComboBox x:Name="ComboRemoteLocation" Width="90" FontSize="12"
                                  Background="#252535" Foreground="#E0E0E0" BorderBrush="#3A3A55"/>
                        <TextBlock Text="  장소에서 재택 근무 시작"
                                   Foreground="#8888AA" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </Border>

        <!-- ── 하단 버튼 ── -->
        <Border Grid.Row="2" Background="#0F0F1C" Padding="14,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="저장" Click="Save_Click"
                        Background="#1848A0" Foreground="White" BorderBrush="#2A68D0"
                        Padding="22,6" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="취소" Click="Cancel_Click"
                        Padding="16,6" FontSize="13" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
