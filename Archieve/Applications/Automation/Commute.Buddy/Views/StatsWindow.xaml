<Window x:Class="CommuteBuddy.Views.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commute.Buddy 통계"
        Width="700" Height="520"
        MinWidth="560" MinHeight="400"
        Background="#1A1A2E"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- 다크 DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background"            Value="#141428"/>
            <Setter Property="Foreground"            Value="#D0D0E0"/>
            <Setter Property="BorderBrush"           Value="#2A2A45"/>
            <Setter Property="BorderThickness"       Value="1"/>
            <Setter Property="GridLinesVisibility"   Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#252540"/>
            <Setter Property="RowBackground"         Value="#141428"/>
            <Setter Property="AlternatingRowBackground" Value="#181832"/>
            <Setter Property="ColumnHeaderHeight"    Value="30"/>
            <Setter Property="CanUserAddRows"        Value="False"/>
            <Setter Property="CanUserDeleteRows"     Value="False"/>
            <Setter Property="IsReadOnly"            Value="True"/>
            <Setter Property="SelectionMode"         Value="Single"/>
            <Setter Property="AutoGenerateColumns"   Value="True"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background"   Value="#1E1E38"/>
            <Setter Property="Foreground"   Value="#9999BB"/>
            <Setter Property="Padding"      Value="8,0"/>
            <Setter Property="FontSize"     Value="12"/>
            <Setter Property="FontWeight"   Value="SemiBold"/>
            <Setter Property="BorderBrush"  Value="#2A2A45"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1E3F80"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background"      Value="#2A2A3E"/>
            <Setter Property="Foreground"      Value="#C0C0D0"/>
            <Setter Property="BorderBrush"     Value="#3A3A55"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding"         Value="12,4"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A55"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 월 네비게이션 -->
            <RowDefinition Height="Auto"/>  <!-- 요약 -->
            <RowDefinition Height="*"/>     <!-- 상세 목록 -->
            <RowDefinition Height="Auto"/>  <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- ── 월 네비게이션 ── -->
        <Border Grid.Row="0" Background="#111120"
                BorderBrush="#2A2A45" BorderThickness="0,0,0,1" Padding="14,10">
            <DockPanel>
                <Button Content="&lt; 이전월" Click="PrevMonth_Click"
                        DockPanel.Dock="Left" Padding="12,4" FontSize="12"/>
                <Button Content="다음월 &gt;" Click="NextMonth_Click"
                        DockPanel.Dock="Right" Padding="12,4" FontSize="12"/>
                <TextBlock x:Name="TxtMonth"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="15" FontWeight="SemiBold" Foreground="#C0C8E8"/>
            </DockPanel>
        </Border>

        <!-- ── 장소별 요약 ── -->
        <Border Grid.Row="1" Background="#141428"
                BorderBrush="#2A2A45" BorderThickness="0,0,0,1" Padding="14,10">
            <StackPanel>
                <TextBlock Text="장소별 요약" Foreground="#6677AA"
                           FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <DataGrid x:Name="SummaryGrid" MaxHeight="120"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          FontSize="12"/>
                <TextBlock x:Name="TxtEmpty" Text="이 달에 기록된 데이터가 없습니다."
                           Foreground="#555570" FontSize="13"
                           HorizontalAlignment="Center" Margin="0,10,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- ── 상세 로그 ── -->
        <Grid Grid.Row="2" Margin="0">
            <DataGrid x:Name="DataGridEntries"
                      Margin="0" FontSize="12"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"/>
        </Grid>

        <!-- ── 닫기 버튼 ── -->
        <Border Grid.Row="3" Background="#0F0F1C" Padding="14,8">
            <Button Content="닫기" Click="Close_Click"
                    HorizontalAlignment="Right" Padding="18,6" FontSize="12"/>
        </Border>

    </Grid>
</Window>
