<UserControl x:Class="TextForge.Views.HashView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A2E" Foreground="#E0E0E0">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="24,20,24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Hash Generator" FontSize="20" FontWeight="Bold" Foreground="#CE93D8"/>
            <TextBlock Text="텍스트의 해시값을 생성합니다" FontSize="12"
                       Foreground="#666688" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 알고리즘 선택 -->
        <Border Grid.Row="1" Style="{StaticResource PanelBorder}" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="알고리즘 :" FontSize="12" Foreground="#888888"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                <RadioButton x:Name="Md5Radio"    Content="MD5"    Style="{StaticResource OptionRadio}" IsChecked="True"/>
                <RadioButton x:Name="Sha1Radio"   Content="SHA-1"  Style="{StaticResource OptionRadio}"/>
                <RadioButton x:Name="Sha256Radio" Content="SHA-256" Style="{StaticResource OptionRadio}"/>
                <RadioButton x:Name="Sha512Radio" Content="SHA-512" Style="{StaticResource OptionRadio}"/>
            </StackPanel>
        </Border>

        <!-- 버튼 행 -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="# Generate Hash" Style="{StaticResource AccentBtn}"
                    Click="Generate_Click" Margin="0,0,6,0"/>
            <Button Content="⎘ Copy" Style="{StaticResource SmallGrayBtn}"
                    Click="Copy_Click" Margin="0,0,6,0"/>
            <Button Content="✕ Clear" Style="{StaticResource SmallGrayBtn}"
                    Click="Clear_Click"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center"
                       FontSize="11" Margin="16,0,0,0"/>
        </WrapPanel>

        <!-- 입출력 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="INPUT" FontSize="10" FontWeight="Bold"
                           Foreground="#444466" Margin="0,0,0,6"/>
                <TextBox Grid.Row="1" x:Name="InputBox" Style="{StaticResource CodeBox}"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         TextChanged="Input_TextChanged"/>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="HASH RESULT" FontSize="10" FontWeight="Bold"
                           Foreground="#444466" Margin="0,0,0,6"/>

                <!-- 결과 표시 패널 -->
                <StackPanel Grid.Row="1" x:Name="ResultPanel">
                    <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" x:Name="AlgoLabel" Text="MD5"
                                       FontSize="11" Foreground="#CE93D8"
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="HashOutput"
                                     Style="{StaticResource CodeBox}"
                                     IsReadOnly="True" TextWrapping="Wrap"
                                     FontSize="12" Padding="8,6"
                                     Background="Transparent" BorderThickness="0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- 모든 알고리즘 동시 보기 -->
                <StackPanel Grid.Row="2" x:Name="AllHashPanel" Visibility="Collapsed">
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
