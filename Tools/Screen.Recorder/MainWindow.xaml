<Window x:Class="ScreenRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen.Recorder" Height="380" Width="480"
        MinHeight="380" MinWidth="480"
        ResizeMode="CanMinimize"
        Background="#1A1A2E" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 브러시 -->
        <SolidColorBrush x:Key="PanelBg"    Color="#242438"/>
        <SolidColorBrush x:Key="Border"     Color="#333350"/>
        <SolidColorBrush x:Key="Accent"     Color="#E74C3C"/>
        <SolidColorBrush x:Key="AccentHov"  Color="#FF6B5A"/>
        <SolidColorBrush x:Key="TextPri"    Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSec"    Color="#888888"/>
        <SolidColorBrush x:Key="GreenBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="YellowBrush" Color="#F39C12"/>

        <!-- 기본 버튼 -->
        <Style x:Key="BaseBtn" TargetType="Button">
            <Setter Property="Foreground"      Value="{StaticResource TextPri}"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="16,8"/>
            <Setter Property="FontSize"         Value="13"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentHov}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GrayBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="Background" Value="#3A3A50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4A60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox 스타일 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#444466"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 타이틀 -->
            <RowDefinition Height="Auto"/>  <!-- 영역 정보 -->
            <RowDefinition Height="Auto"/>  <!-- 설정 -->
            <RowDefinition Height="*"/>     <!-- 여백 -->
            <RowDefinition Height="Auto"/>  <!-- 상태 바 -->
            <RowDefinition Height="Auto"/>  <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- ═══ 타이틀 ═══ -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Screen.Recorder" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource Accent}"/>
            <TextBlock Text="화면 영역을 MP4 또는 GIF로 녹화합니다" FontSize="12"
                       Foreground="{StaticResource TextSec}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- ═══ 선택 영역 정보 ═══ -->
        <Border Grid.Row="1" Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource Border}" BorderThickness="1"
                CornerRadius="8" Padding="16,12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="녹화 영역" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPri}"/>
                    <TextBlock x:Name="RegionInfoText" Text="영역을 선택해주세요"
                               FontSize="12" Foreground="{StaticResource TextSec}" Margin="0,4,0,0"
                               FontFamily="Consolas"/>
                </StackPanel>

                <Button Grid.Column="1" x:Name="SelectRegionBtn" Content="영역 선택"
                        Style="{StaticResource GrayBtn}" Click="SelectRegion_Click"/>
            </Grid>
        </Border>

        <!-- ═══ 설정 ═══ -->
        <Border Grid.Row="2" Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource Border}" BorderThickness="1"
                CornerRadius="8" Padding="16,12" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 출력 형식 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="출력 형식"
                           FontSize="13" Foreground="{StaticResource TextSec}" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="FormatCombo"
                          SelectedIndex="0" Margin="0,0,0,8">
                    <ComboBoxItem Content="MP4 (동영상)"/>
                    <ComboBoxItem Content="GIF (이미지)"/>
                </ComboBox>

                <!-- 프레임레이트 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="FPS"
                           FontSize="13" Foreground="{StaticResource TextSec}" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="FpsCombo"
                          SelectedIndex="1" Margin="0,0,0,8">
                    <ComboBoxItem Content="10 fps"/>
                    <ComboBoxItem Content="15 fps"/>
                    <ComboBoxItem Content="24 fps"/>
                    <ComboBoxItem Content="30 fps"/>
                </ComboBox>

                <!-- 저장 폴더 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="저장 위치"
                           FontSize="13" Foreground="{StaticResource TextSec}" VerticalAlignment="Center"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="OutputFolderText" Grid.Column="0"
                               FontSize="12" Foreground="{StaticResource TextPri}"
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    <Button Grid.Column="1" Content="..." Style="{StaticResource GrayBtn}"
                            Padding="8,4" Margin="8,0,0,0" Click="BrowseFolder_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- ═══ 상태 바 ═══ -->
        <Border Grid.Row="4" Background="{StaticResource PanelBg}"
                CornerRadius="6" Padding="12,8" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 상태 표시등 -->
                <Ellipse x:Name="StatusDot" Grid.Column="0" Width="10" Height="10"
                         Fill="#555555" Margin="0,0,8,0"/>

                <TextBlock x:Name="StatusText" Grid.Column="1" Text="대기 중"
                           FontSize="12" Foreground="{StaticResource TextSec}" VerticalAlignment="Center"/>

                <TextBlock x:Name="TimerText" Grid.Column="2" Text="00:00"
                           FontSize="14" FontFamily="Consolas" FontWeight="Bold"
                           Foreground="{StaticResource TextPri}" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ═══ 녹화 버튼 ═══ -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="RecordBtn" Content="⏺ 녹화 시작"
                    Style="{StaticResource AccentBtn}" FontSize="15" FontWeight="Bold"
                    Padding="0,12" Click="Record_Click" IsEnabled="False"/>

            <Button Grid.Column="1" x:Name="PauseBtn" Content="⏸"
                    Style="{StaticResource GrayBtn}" FontSize="15"
                    Padding="12,12" Margin="8,0,0,0" Visibility="Collapsed"
                    Click="Pause_Click"/>

            <Button Grid.Column="2" x:Name="StopBtn" Content="⏹"
                    Style="{StaticResource GrayBtn}" FontSize="15"
                    Padding="12,12" Margin="8,0,0,0" Visibility="Collapsed"
                    Click="Stop_Click"/>
        </Grid>
    </Grid>
</Window>
