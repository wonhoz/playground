<Window x:Class="HexPeek.Dialogs.GotoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="오프셋으로 이동 (Ctrl+G)"
        Height="150" Width="340"
        ResizeMode="NoResize"
        Background="#1A1A1A"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="DlgBtn" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="오프셋 입력 (HEX: 0xFF / DEC: 255)"
                   Foreground="#888888" FontSize="12"/>

        <TextBox x:Name="TxtOffset" Grid.Row="2"
                 Background="#2A2A2A" Foreground="#E0E0E0"
                 BorderBrush="#444444" BorderThickness="1"
                 Padding="8,6"
                 FontFamily="Cascadia Code,Consolas" FontSize="13"
                 CaretBrush="#E0E0E0"
                 KeyDown="TxtOffset_KeyDown">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="취소" Width="72" Padding="0,7" Margin="0,0,8,0"
                    Background="#333333" BorderBrush="#444444" Foreground="#E0E0E0"
                    Style="{StaticResource DlgBtn}"
                    Click="BtnCancel_Click"/>
            <Button Content="이동" Width="72" Padding="0,7"
                    Background="#0097C8" BorderBrush="#0097C8" Foreground="White"
                    Style="{StaticResource DlgBtn}" IsDefault="True"
                    Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
