<Window x:Class="Photo.Video.Organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Photo &amp; Video Organizer"
        Height="550" Width="780"
        MinHeight="480" MinWidth="650"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4FC3F7"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#29B6F6"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#66BB6A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFB74D"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF5350"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#EEEEEE"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="CardLightBrush" Color="#383838"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A4FC3F7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Button Style -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9E9E9E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Toggle Button -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2"
                        Background="{StaticResource CardLightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"/>
                <Path x:Name="Arrow" Grid.Column="1"
                      Fill="{StaticResource TextSecondaryBrush}"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M0,0 L4,4 L8,0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ComboBox TextBox -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="Transparent"/>
        </ControlTemplate>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource CardLightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Template="{StaticResource ComboBoxToggleButton}"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,8,28,8"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#2D2D2D"
                                            BorderBrush="#505050"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="0,2,0,0"/>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#EEEEEE"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                Margin="2,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4FC3F7"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#404040" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#252525" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock Text="Photo &amp; Video Organizer"
                               Foreground="#9E9E9E"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click">
                        <Path Fill="#9E9E9E" Data="M0,5 L10,5" Stroke="#9E9E9E" StrokeThickness="1"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click">
                        <Path Fill="Transparent" Stroke="#9E9E9E" StrokeThickness="1" Data="M0,0 L10,0 L10,10 L0,10 Z"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click">
                        <Path Stroke="#9E9E9E" StrokeThickness="1" Data="M0,0 L10,10 M10,0 L0,10"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="16,8,16,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Photo &amp; Video Organizer"
                               FontSize="22" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="촬영 날짜 기준으로 사진/동영상 자동 정리"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="260"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drop Zone -->
                    <Border x:Name="DropZone"
                            Grid.Column="0"
                            Background="{StaticResource CardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="12"
                            AllowDrop="True"
                            DragEnter="DropZone_DragEnter"
                            DragLeave="DropZone_DragLeave"
                            DragOver="DropZone_DragOver"
                            Drop="DropZone_Drop">

                        <Grid>
                            <!-- Default State -->
                            <StackPanel x:Name="DefaultState"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <Border Width="80" Height="80"
                                        Background="#383838"
                                        CornerRadius="40"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,16">
                                    <Viewbox Width="40" Height="40">
                                        <Canvas Width="24" Height="24">
                                            <Path Fill="{StaticResource PrimaryBrush}"
                                                  Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                                            <Path Fill="{StaticResource PrimaryBrush}" Opacity="0.5"
                                                  Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/>
                                        </Canvas>
                                    </Viewbox>
                                </Border>

                                <TextBlock Text="파일을 드래그하세요"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="또는"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,8"/>
                                <Button Content="파일 선택"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="SelectFiles_Click"
                                        HorizontalAlignment="Center"/>
                                <TextBlock Text="JPG, HEIC, PNG, MP4, MOV 등 지원"
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,12,0,0"/>
                            </StackPanel>

                            <!-- Drag Over State -->
                            <Border x:Name="DragOverState"
                                    Visibility="Collapsed"
                                    Background="#1A4FC3F7"
                                    CornerRadius="10"
                                    Margin="4">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Viewbox Width="60" Height="60" Margin="0,0,0,12">
                                        <Canvas Width="24" Height="24">
                                            <Path Fill="{StaticResource PrimaryBrush}"
                                                  Data="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z"/>
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock Text="여기에 놓으세요!"
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Progress State -->
                            <StackPanel x:Name="ProgressState"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Width="320">
                                <TextBlock x:Name="ProgressText"
                                           Text="처리 중..."
                                           FontSize="15" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="ProgressFileName"
                                           Text=""
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,0,12"/>
                                <ProgressBar x:Name="ProgressBar"
                                             Height="6"
                                             Minimum="0" Maximum="100"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Background="#404040"/>
                                <TextBlock x:Name="ProgressPercent"
                                           Text="0%"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,0"/>
                                <Button x:Name="CancelButton"
                                        Content="취소"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="Cancel_Click"
                                        HorizontalAlignment="Center"
                                        Margin="0,16,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Settings Panel -->
                    <Border Grid.Column="2"
                            Background="{StaticResource CardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Destination -->
                                <TextBlock Text="저장 위치"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,6"/>
                                <Border Background="{StaticResource CardLightBrush}"
                                        CornerRadius="6"
                                        Padding="10"
                                        Margin="0,0,0,6">
                                    <TextBlock x:Name="DestinationPathText"
                                               Text="폴더를 선택하세요"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"/>
                                </Border>
                                <Button Content="폴더 선택"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="SelectDestination_Click"
                                        HorizontalAlignment="Left"
                                        Padding="12,6"/>

                                <!-- Separator -->
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,14"/>

                                <!-- Folder Structure Option -->
                                <TextBlock Text="폴더 구조"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,6"/>
                                <ComboBox x:Name="FolderStructureCombo"
                                          Style="{StaticResource DarkComboBoxStyle}"
                                          SelectedIndex="0"
                                          Margin="0,0,0,4">
                                    <ComboBoxItem Content="yyyy/MM/파일명" Tag="YearMonth"/>
                                    <ComboBoxItem Content="yyyy/MM/yyyy-MM-dd/파일명" Tag="YearMonthDay"/>
                                </ComboBox>
                                <TextBlock Text="파일명: yyyy-MM-dd HH.mm.ss"
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>

                                <!-- Separator -->
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,14"/>

                                <!-- File List -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="선택된 파일"
                                               FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="FileCountText"
                                               Grid.Column="1"
                                               Text="0개"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Grid>
                                <ListBox x:Name="FileListBox"
                                         Height="120"
                                         Margin="0,6,0,0"
                                         Background="{StaticResource CardLightBrush}"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="2">
                                                <Ellipse Width="6" Height="6" Fill="{StaticResource SecondaryBrush}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding}" FontSize="11" Foreground="#CCCCCC" TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button x:Name="ClearFilesButton"
                                        Content="초기화"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="ClearFiles_Click"
                                        HorizontalAlignment="Left"
                                        Padding="12,6"
                                        Margin="0,6,0,0"
                                        Visibility="Collapsed"/>

                                <!-- Result -->
                                <StackPanel x:Name="ResultPanel" Visibility="Collapsed" Margin="0,12,0,0">
                                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,12"/>
                                    <TextBlock Text="처리 결과"
                                               FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,6"/>
                                    <Border Background="#1A66BB6A" CornerRadius="6" Padding="10">
                                        <StackPanel>
                                            <TextBlock x:Name="ResultSuccessText" FontSize="11" Foreground="#81C784"/>
                                            <TextBlock x:Name="ResultSkippedText" FontSize="11" Foreground="#FFB74D" Margin="0,2,0,0"/>
                                            <TextBlock x:Name="ResultErrorText" FontSize="11" Foreground="#EF5350" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- Footer -->
                <Grid Grid.Row="2" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="6" Height="6" Fill="{StaticResource SecondaryBrush}" Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusText"
                                   Text="준비됨"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <Button x:Name="StartButton"
                            Grid.Column="1"
                            Content="정리 시작"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="Start_Click"
                            IsEnabled="False"
                            Padding="24,10"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
