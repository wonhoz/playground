<Window x:Class="HexPeek.CompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:HexPeek.Models"
        Title="Hex.Peek — 파일 비교" Height="680" Width="1200"
        MinHeight="400" MinWidth="900"
        Background="#1A1A1A" Foreground="#E0E0E0"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="HexItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding"  Value="0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1E2A44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="CmpRowTemplate" DataType="{x:Type models:HexRow}">
            <Grid Margin="8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding OffsetText}"
                           Foreground="#6272A4" FontFamily="Cascadia Code,Consolas" FontSize="13"/>
                <TextBlock Grid.Column="2" Text="{Binding HexText}"
                           Foreground="#CDD6F4" FontFamily="Cascadia Code,Consolas" FontSize="13"/>
                <TextBlock Grid.Column="3" Text="│" Foreground="#3A3A3A"
                           HorizontalAlignment="Center" FontFamily="Cascadia Code,Consolas" FontSize="13"/>
                <TextBlock Grid.Column="4" Text="{Binding AsciiText}"
                           Foreground="#F1FA8C" FontFamily="Cascadia Code,Consolas" FontSize="13"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 헤더 -->
            <RowDefinition Height="*"/>    <!-- 뷰 -->
            <RowDefinition Height="Auto"/> <!-- 상태바 -->
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,0,1" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="파일 A:" Foreground="#888888" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtFileA" Text="—" Foreground="#0097C8" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="파일 B:" Foreground="#888888" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtFileB" Text="—" Foreground="#F38BA8" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 좌우 분할 뷰 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="ListA" Grid.Column="0"
                     Background="#1A1A1A" BorderThickness="0"
                     ItemTemplate="{StaticResource CmpRowTemplate}"
                     ItemContainerStyle="{StaticResource HexItemStyle}"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     ScrollViewer.CanContentScroll="True"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     Padding="0,4"/>

            <Rectangle Grid.Column="1" Fill="#333333"/>

            <ListBox x:Name="ListB" Grid.Column="2"
                     Background="#1A1A1A" BorderThickness="0"
                     ItemTemplate="{StaticResource CmpRowTemplate}"
                     ItemContainerStyle="{StaticResource HexItemStyle}"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     ScrollViewer.CanContentScroll="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Padding="0,4"
                     ScrollViewer.ScrollChanged="ListB_ScrollChanged"/>
        </Grid>

        <!-- 상태바 -->
        <Border Grid.Row="2" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="8,4">
            <TextBlock x:Name="TxtCmpStatus" Text="—" Foreground="#888888" FontSize="11"/>
        </Border>
    </Grid>
</Window>
