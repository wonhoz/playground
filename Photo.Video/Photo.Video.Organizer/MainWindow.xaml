<Window x:Class="Photo.Video.Organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Photo &amp; Video Organizer"
        Height="650" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- 컬러 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4285F4"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#3367D6"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#34A853"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FBBC04"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EA4335"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#202124"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5F6368"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E8EAED"/>

        <!-- 버튼 스타일 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F0FE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Photo &amp; Video Organizer"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="사진과 동영상을 촬영 날짜별로 자동 정리합니다"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 드래그 앤 드롭 영역 -->
            <Border x:Name="DropZone"
                    Grid.Column="0"
                    Background="{StaticResource CardBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="16"
                    AllowDrop="True"
                    DragEnter="DropZone_DragEnter"
                    DragLeave="DropZone_DragLeave"
                    DragOver="DropZone_DragOver"
                    Drop="DropZone_Drop">

                <Grid>
                    <!-- 기본 상태 -->
                    <StackPanel x:Name="DefaultState"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <!-- 아이콘 -->
                        <Border Width="120" Height="120"
                                Background="#E8F0FE"
                                CornerRadius="60"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,24">
                            <Viewbox Width="60" Height="60">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource PrimaryBrush}"
                                          Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                                    <Path Fill="{StaticResource PrimaryBrush}" Opacity="0.6"
                                          Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>

                        <TextBlock Text="파일을 여기에 드래그하세요"
                                   FontSize="20" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="또는"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,12"/>
                        <Button Content="파일 선택"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="SelectFiles_Click"
                                HorizontalAlignment="Center"/>
                        <TextBlock Text="지원 형식: JPG, HEIC, PNG, MP4, MOV 등"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0"/>
                    </StackPanel>

                    <!-- 드래그 중 상태 -->
                    <Border x:Name="DragOverState"
                            Visibility="Collapsed"
                            Background="#E8F0FE"
                            CornerRadius="14"
                            Margin="4">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="80" Height="80" Margin="0,0,0,16">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource PrimaryBrush}"
                                          Data="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="여기에 놓으세요!"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 진행 상태 -->
                    <StackPanel x:Name="ProgressState"
                                Visibility="Collapsed"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Width="400">
                        <TextBlock x:Name="ProgressText"
                                   Text="파일 처리 중..."
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="ProgressFileName"
                                   Text=""
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,16"/>
                        <ProgressBar x:Name="ProgressBar"
                                     Height="8"
                                     Minimum="0" Maximum="100"
                                     Foreground="{StaticResource PrimaryBrush}"
                                     Background="#E8EAED"/>
                        <TextBlock x:Name="ProgressPercent"
                                   Text="0%"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        <Button x:Name="CancelButton"
                                Content="취소"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="Cancel_Click"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 설정 및 결과 패널 -->
            <Border Grid.Column="2"
                    Background="{StaticResource CardBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 대상 폴더 -->
                        <TextBlock Text="저장 위치"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,8">
                            <TextBlock x:Name="DestinationPathText"
                                       Text="폴더를 선택하세요"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </Border>
                        <Button Content="폴더 선택"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="SelectDestination_Click"
                                HorizontalAlignment="Left"
                                Padding="16,8"/>

                        <!-- 구분선 -->
                        <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,20"/>

                        <!-- 파일 목록 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="선택된 파일"
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="FileCountText"
                                       Grid.Column="1"
                                       Text="0개"
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>
                        <ListBox x:Name="FileListBox"
                                 Height="180"
                                 Margin="0,8,0,0"
                                 Background="#F5F7FA"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4">
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" FontSize="12" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button x:Name="ClearFilesButton"
                                Content="목록 초기화"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="ClearFiles_Click"
                                HorizontalAlignment="Left"
                                Padding="16,8"
                                Margin="0,8,0,0"
                                Visibility="Collapsed"/>

                        <!-- 구분선 -->
                        <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,20"/>

                        <!-- 정보 -->
                        <TextBlock Text="폴더 구조"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <Border Background="#FFF8E1" CornerRadius="8" Padding="12">
                            <StackPanel>
                                <TextBlock FontSize="12" Foreground="#F57C00" TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold">yyyy/MM/</Run>
                                    <Run>형식으로 정리</Run>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#F57C00" TextWrapping="Wrap" Margin="0,4,0,0">
                                    <Run FontWeight="SemiBold">파일명:</Run>
                                    <Run>yyyy-MM-dd HH.mm.ss</Run>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- 결과 -->
                        <StackPanel x:Name="ResultPanel" Visibility="Collapsed" Margin="0,16,0,0">
                            <TextBlock Text="처리 결과"
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="#E8F5E9" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <TextBlock x:Name="ResultSuccessText" FontSize="13" Foreground="#2E7D32"/>
                                    <TextBlock x:Name="ResultSkippedText" FontSize="13" Foreground="#F57C00" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="ResultErrorText" FontSize="13" Foreground="#C62828" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 하단 버튼 -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText"
                           Text="준비됨"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

            <Button x:Name="StartButton"
                    Grid.Column="1"
                    Content="정리 시작"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="Start_Click"
                    IsEnabled="False"
                    Padding="32,12"/>
        </Grid>
    </Grid>
</Window>
