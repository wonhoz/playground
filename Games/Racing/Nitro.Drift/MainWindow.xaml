                    <TextBlock Text="BOOST " FontSize="10" Foreground="#888888" FontFamily="Consolas"/>
                    <Border Background="#333350" CornerRadius="3" Height="8" Width="100">
                        <Border x:Name="BoostBar" Background="#FF6600" CornerRadius="3"
                                HorizontalAlignment="Left" Width="100"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock x:Name="LapText" Text="LAP 1/3" FontSize="16" FontWeight="Bold"
                           Foreground="#FFD700" HorizontalAlignment="Center" FontFamily="Consolas"/>
                <TextBlock x:Name="TimeText" Text="0:00.00" FontSize="13" Foreground="#888888"
                           HorizontalAlignment="Center" FontFamily="Consolas"/>
