<UserControl x:Class="TextForge.Views.TimestampView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A2E" Foreground="#E0E0E0">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="24,20,24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Timestamp" FontSize="20" FontWeight="Bold" Foreground="#80DEEA"/>
            <TextBlock Text="Unix 타임스탬프 ↔ 날짜/시간 변환" FontSize="12"
                       Foreground="#666688" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 현재 시각 표시 -->
        <Border Grid.Row="1" Style="{StaticResource PanelBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="현재 시각 (KST)" FontSize="11" Foreground="#888888"/>
                    <TextBlock x:Name="NowText" FontSize="18" FontFamily="Consolas"
                               FontWeight="Bold" Foreground="#80DEEA" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" Content="⟳ 지금 사용" Style="{StaticResource GrayBtn}"
                        Click="UseNow_Click" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Unix → DateTime -->
        <Border Grid.Row="2" Style="{StaticResource PanelBorder}" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Unix 타임스탬프 → 날짜/시간"
                           FontSize="13" FontWeight="SemiBold" Foreground="#80DEEA"
                           Margin="0,0,0,10"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="UnixInputBox"
                             Style="{StaticResource InputBox}"
                             TextChanged="Unix_TextChanged"
                             />
                    <RadioButton Grid.Column="1" x:Name="SecRadio" Content="초 (sec)"
                                 Style="{StaticResource OptionRadio}"
                                 IsChecked="True" Margin="12,0,0,0"
                                 VerticalAlignment="Center"
                                 Checked="Unit_Changed"/>
                    <RadioButton Grid.Column="2" x:Name="MsRadio" Content="밀리초 (ms)"
                                 Style="{StaticResource OptionRadio}"
                                 VerticalAlignment="Center"
                                 Checked="Unit_Changed"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 변환 결과 -->
        <Border Grid.Row="3" Style="{StaticResource PanelBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="UTC" FontSize="10" Foreground="#888888" Margin="0,0,0,4"/>
                    <TextBox x:Name="UtcBox" Style="{StaticResource CodeBox}"
                             IsReadOnly="True" FontSize="12" Height="Auto"
                             MinHeight="32" Padding="8,6" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="KST (UTC+9)" FontSize="10" Foreground="#888888" Margin="0,0,0,4"/>
                    <TextBox x:Name="KstBox" Style="{StaticResource CodeBox}"
                             IsReadOnly="True" FontSize="12" Height="Auto"
                             MinHeight="32" Padding="8,6" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="상대 시간" FontSize="10" Foreground="#888888" Margin="0,0,0,4"/>
                    <TextBox x:Name="RelativeBox" Style="{StaticResource CodeBox}"
                             IsReadOnly="True" FontSize="12" Height="Auto"
                             MinHeight="32" Padding="8,6" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DateTime → Unix -->
        <Border Grid.Row="4" Style="{StaticResource PanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="날짜/시간 → Unix 타임스탬프"
                           FontSize="13" FontWeight="SemiBold" Foreground="#80DEEA"
                           Margin="0,0,0,10"/>
                <Grid Grid.Row="1" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="DateInputBox"
                             Style="{StaticResource InputBox}"
                             TextChanged="Date_TextChanged"
                             />
                    <Button Grid.Column="1" Content="변환" Style="{StaticResource GrayBtn}"
                            Click="DateConvert_Click" Margin="8,0,0,0"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="초 (sec)" FontSize="10" Foreground="#888888" Margin="0,0,0,4"/>
                        <TextBox x:Name="UnixSecOutput" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" FontSize="13" Padding="8,6"
                                 FontFamily="Consolas"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="밀리초 (ms)" FontSize="10" Foreground="#888888" Margin="0,0,0,4"/>
                        <TextBox x:Name="UnixMsOutput" Style="{StaticResource CodeBox}"
                                 IsReadOnly="True" FontSize="13" Padding="8,6"
                                 FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
