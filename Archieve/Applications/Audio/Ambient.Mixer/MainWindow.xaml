<Window x:Class="AmbientMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ambient Mixer" Width="420" Height="582"
        Background="#1A1A2E" Foreground="#E0E0E0"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Resources>

        <!-- â”€â”€ ìŠ¬ë¼ì´ë” íŠ¸ëž™ ê³µí†µ (DecreaseRepeatButton / IncreaseRepeatButton) â”€â”€ -->
        <Style x:Key="SliderRepBtn" TargetType="RepeatButton">
            <Setter Property="Focusable"  Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Height="4" CornerRadius="2"
                                Background="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- â”€â”€ ìŠ¬ë¼ì´ë” ì¸ â”€â”€ -->
        <Style x:Key="SliderThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width"  Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Fill="#E0E0E0" Cursor="Hand">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Fill" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- â”€â”€ ë©”ì¸ ìŠ¬ë¼ì´ë” â”€â”€ -->
        <Style x:Key="AmbiSlider" TargetType="Slider">
            <Setter Property="Minimum"           Value="0"/>
            <Setter Property="Maximum"           Value="1"/>
            <Setter Property="SmallChange"       Value="0.01"/>
            <Setter Property="LargeChange"       Value="0.1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="20">
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderRepBtn}"
                                                  Background="#00BCD4"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumb}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderRepBtn}"
                                                  Background="#2D2D4A"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- â”€â”€ ë‹¤í¬ ë²„íŠ¼ â”€â”€ -->
        <Style x:Key="DarkBtn" TargetType="Button">
            <Setter Property="Background"       Value="#2D2D4A"/>
            <Setter Property="Foreground"       Value="#E0E0E0"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="10,6"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A5C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- â”€â”€ ìž¬ìƒ ë²„íŠ¼ â”€â”€ -->
        <Style x:Key="PlayBtn" TargetType="Button" BasedOn="{StaticResource DarkBtn}">
            <Setter Property="Background" Value="#006064"/>
            <Setter Property="Width"      Value="44"/>
            <Setter Property="Height"     Value="44"/>
            <Setter Property="FontSize"   Value="18"/>
        </Style>

        <!-- â”€â”€ í”„ë¦¬ì…‹ ë²„íŠ¼ â”€â”€ -->
        <Style x:Key="PresetBtn" TargetType="Button" BasedOn="{StaticResource DarkBtn}">
            <Setter Property="Margin"    Value="0,0,6,6"/>
            <Setter Property="FontSize"  Value="11"/>
            <Setter Property="Padding"   Value="10,5"/>
        </Style>

    </Window.Resources>

    <Grid Margin="16,14,16,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- í—¤ë” (ìž¬ìƒ + ë§ˆìŠ¤í„° ë³¼ë¥¨) -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="1"/>     <!-- êµ¬ë¶„ì„  -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>     <!-- íŠ¸ëž™ ìŠ¬ë¼ì´ë” ëª©ë¡ -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="1"/>     <!-- êµ¬ë¶„ì„  -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>  <!-- í”„ë¦¬ì…‹ -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="1"/>     <!-- êµ¬ë¶„ì„  -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>  <!-- ìŠ¬ë¦½ íƒ€ì´ë¨¸ -->
        </Grid.RowDefinitions>

        <!-- â”€â”€ í—¤ë” â”€â”€ -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="38"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnPlay" Grid.Column="0"
                    Style="{StaticResource PlayBtn}"
                    Content="â–¶" Click="BtnPlay_Click"/>

            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock Text="AMBIENT MIXER" FontSize="13" FontWeight="Bold"
                           Foreground="#00BCD4"/>
                <TextBlock x:Name="TxtStatus" Text="ì •ì§€ë¨" FontSize="10"
                           Foreground="#666688"/>
            </StackPanel>

            <Slider x:Name="SliderMaster" Grid.Column="3"
                    Style="{StaticResource AmbiSlider}"
                    Minimum="0" Maximum="1" Value="0.8"
                    Margin="12,0,0,0"
                    ValueChanged="SliderMaster_ValueChanged"/>

            <TextBlock x:Name="TxtMaster" Grid.Column="4"
                       Text="80%" VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Foreground="#888888" FontSize="10"/>
        </Grid>

        <!-- êµ¬ë¶„ì„  -->
        <Border Grid.Row="2" Background="#2D2D4A"/>

        <!-- â”€â”€ íŠ¸ëž™ ìŠ¬ë¼ì´ë” ëª©ë¡ â”€â”€ -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="TrackPanel"/>
        </ScrollViewer>

        <!-- êµ¬ë¶„ì„  -->
        <Border Grid.Row="6" Background="#2D2D4A"/>

        <!-- â”€â”€ í”„ë¦¬ì…‹ â”€â”€ -->
        <StackPanel Grid.Row="8">
            <TextBlock Text="PRESETS" FontSize="9" FontWeight="Bold"
                       Foreground="#666688" Margin="0,0,0,6"/>
            <WrapPanel x:Name="PresetPanel"/>
        </StackPanel>

        <!-- êµ¬ë¶„ì„  -->
        <Border Grid.Row="10" Background="#2D2D4A"/>

        <!-- â”€â”€ ìŠ¬ë¦½ íƒ€ì´ë¨¸ â”€â”€ -->
        <Grid Grid.Row="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="ðŸŒ™ ìˆ˜ë©´ íƒ€ì´ë¨¸"
                       VerticalAlignment="Center"
                       Foreground="#666688" FontSize="11"/>

            <WrapPanel x:Name="SleepPanel" Grid.Column="1"
                       Margin="10,0" VerticalAlignment="Center"/>

            <TextBlock x:Name="TxtCountdown" Grid.Column="2"
                       VerticalAlignment="Center"
                       Foreground="#00BCD4" FontSize="11"
                       Visibility="Collapsed"/>
        </Grid>

    </Grid>
</Window>
